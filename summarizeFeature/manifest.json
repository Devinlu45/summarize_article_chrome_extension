{
    "manifest_version": 3,
    "name": "Summarize Articles",
    "version": "1.0",
    "description": "Extension that summarize articles on select news website.",
    "permissions": ["tabs", "declarativeContent", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "care-16.png",
        "48": "care-48.png",
        "128": "care-128.png"
    },
    "action": {
        "default_icon": "care-16.png",
        "default_popup": "popup.html"
    }
}